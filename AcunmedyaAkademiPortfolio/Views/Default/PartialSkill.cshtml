@model List<AcunmedyaAkademiPortfolio.Models.TblSkills>
<section id="skills" class="skills section light-background">

    <div class="container section-title" data-aos="fade-up">
        <h2>Yetenekler</h2>
        <p>Kullandığım programlama dilleri, teknolojiler ve geliştirdiğim beceriler hakkında detaylı bilgi edinin.</p>
    </div>

    <div class="container" data-aos="fade-up" data-aos-delay="100">
        <div class="row row-cols-1 row-cols-md-2 skills-content skills-animation">
     
                @foreach (var item in Model)
                {
                <div class="progress">
                    <span class="skill"><span>@item.SkillTitle</span> <i class="val">@item.SkillValue%</i></span>
                    <div class="progress-bar-wrap">
                        <div class="progress-bar" role="progressbar" aria-valuenow="@item.SkillValue" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
                }
            
        </div>
    </div>

</section>