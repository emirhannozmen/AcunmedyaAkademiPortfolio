@model List<AcunmedyaAkademiPortfolio.Models.TblAbout>
<section id="about" class="about section light-background">
    @foreach (var item in Model)
    {
        <div class="container section-title" data-aos="fade-up">
            <h2>Hakkımda</h2>
            <p>@item.Description</p>
        </div>

        <div class="container" data-aos="fade-up" data-aos-delay="100">

            <div class="row gy-4 justify-content-center">

                <div class="col-lg-4">
                    <img src="@item.ImageUrl" class="img-fluid" alt="Profile Image">
                </div>

                
                <div class="col-lg-8 content">

                    <br />
                    <h2>@item.Title</h2>
                    <p class="fst-italic py-3">
                        Bana ait kişisel bilgilere aşağıdaki ekrandan erişim sağlayabilirsiniz.
                    </p>

                    <div class="row">
                        <div class="col-lg-6">
                            <ul>
                                <li><i class="bi bi-chevron-right"></i> <strong>Doğum Tarihi :</strong> <span>@(item.Birthday?.ToString("dd/MM/yyyy"))</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Web Sitesi :</strong> <span>@item.Website</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Telefon :</strong> <span>+ @item.Phone</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Şehir :</strong> <span>@item.Location</span></li>
                            </ul>
                        </div>
                        <div class="col-lg-6">
                            <ul>
                                <li><i class="bi bi-chevron-right"></i> <strong>Yaş :</strong> <span>@item.Age</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Eğitim :</strong> <span>@item.Degree</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>E-posta :</strong> <span>@item.Email</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Freelance :</strong> <span>@item.Freelance</span></li>
                            </ul>
                        </div>
                    </div>

                </div>

            </div>

        </div>
    }
    </section>
