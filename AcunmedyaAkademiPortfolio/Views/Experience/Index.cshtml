@model List<AcunmedyaAkademiPortfolio.Models.TblExperience>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1 style="text-align: center;">Deneyim Listesi</h1>
<br />
<table class="table table-striped table-bordered table-hover">

    <tr>
        <th>#</th>
        <th>Deneyim Adı</th>
        <th>Dönem</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>@item.ExperienceID</td>
            <td>@item.Title</td>
            <td>@item.Period</td>
            <td>@(item.Description?.Length > 50 ? item.Description?.Substring(0, 50) + "..." : item.Description)</td>
            <td><a href="/Experience/DeleteExperience/@item.ExperienceID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Experience/UpdateExperience/@item.ExperienceID" class="btn btn-success">Güncelle</a></td>

        </tr>
    }
</table>
<a href="/Experience/CreateExperience/" class="btn btn-primary">Yeni Deneyim Ekle</a>