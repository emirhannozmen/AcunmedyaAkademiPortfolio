@model AcunmedyaAkademiPortfolio.Models.TblCategory
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<h2>Kategori Güncelleme</h2>

<form method="post">

    <label>Kategori Id</label>
    @Html.TextBoxFor(x => x.CategoryID, new { @class = "form-control", @style = "border: groove", @readonly = "readonly" })
    <br />

    <label>Kategori Adı</label>
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control", @style = "border: groove" })
    <br />

    <button class="btn btn-primary">Kaydet</button>

</form>