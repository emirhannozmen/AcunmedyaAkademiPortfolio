@model List<AcunmedyaAkademiPortfolio.Models.TblProject>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1 style="text-align: center;">Proje Listesi</h1>
<br />
<table class="table table-striped table-bordered table-hover">

    <tr>
        <th>#</th>
        <th>Proje</th>
        <th>Kategori</th>
        <th>Açıklama</th>
        <th>Resim</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>@item.ProjectID</td>
            <td>@item.ProjectTitle</td>
            <td>@item.TblCategory.CategoryName</td>
            <td>@item.Description</td>
            <td><img src="@item.ImageUrl" style="width:140px; height:auto;" /></td>
            <td><a href="/Portfolio/DeletePortfolio/@item.ProjectID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Portfolio/UpdatePortfolio/@item.ProjectID" class="btn btn-success">Güncelle</a></td>

        </tr>
    }
</table>
<a href="/Portfolio/CreatePortfolio/" class="btn btn-primary">Yeni Proje Ekle</a>
