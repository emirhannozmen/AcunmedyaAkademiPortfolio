@model List<AcunmedyaAkademiPortfolio.Models.TblTestimonial>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1 style="text-align: center;">Referans Listesi</h1>
<br />

<table class="table table-striped table-bordered table-hover">
    
        <tr>
            <th>#</th>
            <th>Referans</th>
            <th>Ünvan</th>
            <th>Yorum</th>
            <th>Resim</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TestimonialID</td>
                <td>@item.NameSurname</td>
                <td>@item.Title</td>
                <td>@item.CommentDetail</td>
                <td><img src="@item.ImageUrl" style="width:140px; height:auto;" /></td>
                <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialID" class="btn btn-success">Güncelle</a></td>
            </tr>
        }

</table>

<a href="/Testimonial/CreateTestimonial/" class="btn btn-primary">Yeni Referans Ekle</a>